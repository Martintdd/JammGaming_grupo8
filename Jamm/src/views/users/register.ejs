<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head" , {title:"Registrate"}) %>

<body>

    <header class="header-login">
        <div>
            <a href="/"> <img src="/images/JAMM-Gaming.png" class="logo-login"></a>
           
        </div>
          
    </header>
<br>
    <div class="contenedor-login">
<!-- la ruta no debería ser action = "/users/register"? -->
<div class="errores">
    <ul></ul>
</div>
    <form class="create-form" action="/register" method="POST" enctype="multipart/form-data">
        <div class="control-formulario">
            <label>¡Contanos quién sos!</label>
        </div>
        <div class="control-formulario">
            <label>Nombre y apellido:</label>
            <input type="text" name="fullName" placeholder="Juan Pérez" class="control fullName" 
            
            value="<%= (locals.oldData && oldData.fullName) ? oldData.fullName : '' %>">
            <% if (locals.errors && errors.fullName) { %>
                <p class="registerForm error"><%= errors.fullName.msg %>  </p>
        <% } %>  

        </div> 
        <div class="control-formulario">
            <label>Email:</label>
            <input type="email" name="email" placeholder="juan@hotmail.com" class="control email"
            
            value="<%= (locals.oldData && oldData.email) ? oldData.email : '' %>" >
            <% if (locals.errors && errors.email) { %>
                <p class="registerForm error"><%= errors.email.msg %>  </p>
            <% } %>  

        </div> 
        <div class="control-formulario">
            <label>Contraseña:</label>
            <input type="password" name="password" placeholder="password" class="control password">

        </div>   
        <!--<div class="control-formulario">
            <label>Confirmar contraseña:</label>
            <input type="password" name="passwordConfirm" placeholder="password" class="control">

        </div> -->  

        <div class="control-formulario">
        <label>Imagen</label>
                <input type="file" name="image" placeholder="Imagen" class="registerFormImg">  
                <% if (locals.errors && errors.image) { %>
                    <p class="registerFormImg error"><%= errors.image.msg %>  </p>
                <% } %>                  
        </div>
        
        <div class="control-formulario">  

        <button type="submit" class="boton-formulario">Registrarme</button>
        
        </div>
    </form>
    </div>

    </section>
    <script src="/js/validationRegister.js" type="text/javascript"></script>
</body>
</html>